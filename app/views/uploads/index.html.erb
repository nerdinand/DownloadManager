<h1>Listing uploads</h1>

<table>
  <tr>
    <th>file name</th>
    <th>file size</th>
    <th>description</th>
    <th></th>
    <th></th>
  </tr>

<% @uploads.each do |upload| %>
  <tr>
    <td><%= link_to upload.file_file_name, upload.file.url %></td>
    <td><%= upload.file_file_size %></td>
    <td><%= upload.description %></td>
    <td><%= link_to 'Edit', edit_upload_path(upload) %></td>
    <td><%= link_to 'Destroy', upload, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

