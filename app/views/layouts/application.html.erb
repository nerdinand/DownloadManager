<!DOCTYPE html>
<html>
<head>
  <title>DownloadManager</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <h1>Der neue schicke DownloadManager</h1>

  <ul class="navigation">
    <li><%= link_to "guest link", guest_upload_uploads_path %></li>
    <li><%= link_to "uploads", uploads_path %></li>
    <li><%= link_to "new upload", new_upload_path %> </li>
    <% if current_user %>
      <li><%= link_to "logout", users_logout_path %></li>
    <% else %>
      <li><%= link_to "login", users_login_path %></li>
    <% end %>
  </ul>

  <% if flash[:error] %>
    <p id="alert"><%= flash[:error] %></p>
  <%  end %>

  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %> </p>
  <% end %>

  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
  <%  end %>

  <%= render :partial => "layouts/folders", :locals => {:folders => all_folders} %>


    <div class="content"><%= yield %></div>

</body>
</html>
