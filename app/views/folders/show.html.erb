<p id="notice"><%= notice %></p>

<p>
  <b><%= @folder.name %></b> owned by <%= @folder.user.login %>
</p>

<ul>
<% @folder.uploads.each do |upload| %>
  <li>
    <%= link_to upload.file_file_name, file_upload_path(upload) %>
    <%= render :partial => "layouts/move", :locals => {:upload => upload}%>
  </li>
<% end %>
</ul>

<%= link_to 'Edit folder', edit_folder_path(@folder) %> |
<%= link_to 'Delete folder', @folder, :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to "New subfolder", new_folder_folder_path(@folder) %>

